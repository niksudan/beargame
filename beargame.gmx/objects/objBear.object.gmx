            <kind>1</kind>
            <string>/// Handle zone events

// Trigger zone when it has been reached
if (didReachDest &amp;&amp; didClickZone) {
    didClickZone = false;
    if (!zoneIsTransition) {
        showPhrases = true;
        with (objQuestion) {
            instance_destroy();
        }
        show_debug_message('Triggering zone');
    } else {
        set_state(transitionState);
        show_debug_message('Transitioning to state ' + string(transitionState));
    }
}

// Trigger click zone logic
if (showPhrases &amp;&amp; !isActive) {
    if (is_string(phrases)) {
        switch (phrases) {
                
            // Attack
            case 'attack':
                show_debug_message('Triggering attack');
                isAttacking = true;
                showPhrases = false;
                break;
        }
    
    // Dialogue
    } else {
        var phraseCount = ds_list_size(phrases);
        if (controller.didClick) {
            phraseIndex += 1;
            controller.currentPhraseLength = 0;
            show_debug_message(string(phraseIndex) + ' of ' + string(phraseCount) + ' completed');
            if (phraseIndex &gt;= phraseCount) {
                activate_bear();
                exit;
            }
        }
    }
}

